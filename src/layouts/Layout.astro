---
interface Props {
  pageTitle?: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="og:description"
      content="Software Engineer from Lima. Dive into my projects, tutorials, and digital exploration. Always learning, always crafting."
    />
    <meta name="author" />
    <meta name="og:title" content="Kevin Tupac" />
    <meta
      name="og:description"
      content="Software Engineer from Lima. Dive into my projects, tutorials, and digital exploration. Always learning, always crafting."
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <meta name="og:site_name" content="Kevin Tupac" />
    <link rel="icon" href="/imagenes/imagen1.png" />
    <title>Portafolio | {pageTitle}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Segoe UI", "Arial", sans-serif;
    text-decoration: none;
  }
  html {
    scroll-padding-top: 9vh;
  }

  /* Fondo y estructura general  */
  body {
    padding-top: 60px;
    color: #f8f9fa;
    background-image: radial-gradient(
      circle,
      #131b4d,
      #141e57,
      #162262,
      #17256c,
      #182977
    );
  }
  h2 {
    font-size: 2.5rem;
    margin-bottom: 30px;
  }
  a {
    text-decoration: none;
  }
  section {
    margin-bottom: 7vh;
  }
  svg {
    width: 25px;
    height: auto;
  }
</style>
